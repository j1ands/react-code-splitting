{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "jsx": "react",
        "target": "es5",
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"]
    },
    "include": [
        "./src/**/*",
        "./server/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ]
}
